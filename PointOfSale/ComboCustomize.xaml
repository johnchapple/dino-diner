<Page x:Class="PointOfSale.ComboCustomize"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboCustomize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Grid.Column="0" Click="MakeSmall">
            Small
        </Button>
        <Button Grid.Row="1" Grid.Column="1" Click="MakeMedium">
            Medium
        </Button>
        <Button Grid.Row="1" Grid.Column="2" Click="MakeLarge">
            Large
        </Button>
        <Button Grid.Row="0" Grid.Column="0" Click="ChooseSide">
            Side
        </Button>
        <Button Grid.Row="0" Grid.Column="2" Click="ChooseDrink">
            Drink
        </Button>
    </Grid>
</Page>

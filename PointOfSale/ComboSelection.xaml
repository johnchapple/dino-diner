<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="150" />
                <Setter Property="Height" Value="150" />
            </Style>
        </WrapPanel.Resources>
        <Button Click="BrontoCombo">Brontowurst Burger Combo</Button>
        <Button Click="SteakCombo">Steakosaurus Burger Combo</Button>
        <Button Click="TRexCombo">T-Rex King Burger Combo</Button>
        <Button Click="PrehistoricCombo">Prehistoric PBJ Combo</Button>
        <Button Click="PterCombo">Pterodactyl Wings Combo</Button>
        <Button Click="VelociCombo">Veloci-Wrap Combo</Button>
        <Button Click="NuggetsCombo">Dino-Nuggets Combo</Button>
    </WrapPanel>
</Page>
